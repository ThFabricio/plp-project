  <div class="mt-4">

    <h2>Semanal: </h2>
    <% @res_semanal.each do |res| %>
      <p>Semana: <%= res[0] %> - Data inicial: <%= Date.commercial(Date.today.year, res[0], 1) %> - Data final: <%= Date.commercial(Date.today.year, res[0], 7) %> - Atividades realizadas: <%= res[1] %></p>
    <% end %>

    <h2>Mensal: </h2>
    <% @res_mensal.each do |res| %>
