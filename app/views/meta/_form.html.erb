<%= form_with(model: metum) do |form| %>
  <% if metum.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(metum.errors.count, "error") %> prohibited this metum from being saved:</h2>

      <ul>
        <% metum.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-3">
    <%= form.label :nome, style: "display: block" %>
    <%= form.text_field :nome, style:"background-color: #f5f5f5; border-radius: 0.5rem; border:none" %>
  </div>

  <div class="my-3">
    <%= form.label :descricao, style: "display: block" %>
    <%= form.text_area :descricao, style:"background-color: #f5f5f5; border-radius: 0.5rem; border:none" %>
  </div>

  <div class="my-3">
    <%= form.label :frequencia, style: "display: block" %>
    <%= form.text_field :frequencia, style:"background-color: #f5f5f5; border-radius: 0.5rem; border:none" %>
  </div>

  <div class="my-3">
    <%= form.label :status, style: "display: block" %>
    <%= form.select :status, ["Não começado", "Em andamento", "Concluída"] %>
  </div>

  <div class="my-3">
    <%= form.label :categoria_id, style: "display: block" %>
    <%= form.collection_select(:categoria_id, Categorium.all, :id, :nome, :prompt => 'Categoria') %>
  </div>
  <div class="my-3">
    <%= form.submit %>
  </div>
<% end %>
